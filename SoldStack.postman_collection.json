{
  "info": {
    "name": "SoldStack API Workflow",
    "_postman_id": "d9e0f1a2-b3c4-5678-90ab-cdef12345678",
    "description": "Workflow Auth & User Service avec endpoints mis Ã  jour",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "auth_token",
      "value": ""
    },
    {
      "key": "user_ids",
      "value": "[]"
    }
  ],
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/authentication/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "authentication",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"new_user\",\n  \"email\": \"new_user@example.com\",\n  \"password\": \"password123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Register returns 200', function() { pm.response.to.have.status(200); });",
                  "var jsonData = pm.response.json();",
                  "pm.test('User id exists', function() { pm.expect(jsonData.id).to.exist; });"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/authentication/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "authentication",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"new_user@example.com\",\n  \"password\": \"password123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Login returns 200', function() { pm.response.to.have.status(200); });",
                  "var jsonData = pm.response.json();",
                  "pm.test('Token is present', function() { pm.expect(jsonData.token).to.exist; });",
                  "pm.environment.set('auth_token', jsonData.token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/authentication/logout",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "authentication",
                "logout"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Logout returns 200', function() { pm.response.to.have.status(200); });",
                  "pm.environment.set('auth_token', '');"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "User Service",
      "item": [
        {
          "name": "Create Multiple Users",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/utilisateurs",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "utilisateurs"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user_{{Math.floor(Math.random()*10000)}}\",\n  \"email\": \"user_{{Math.floor(Math.random()*10000)}}@example.com\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Create User returns 200', function() { pm.response.to.have.status(200); });",
                  "var jsonData = pm.response.json();",
                  "var ids = JSON.parse(pm.environment.get('user_ids'));",
                  "ids.push(jsonData.id);",
                  "pm.environment.set('user_ids', JSON.stringify(ids));"
                ]
              }
            }
          ]
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/utilisateurs",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "utilisateurs"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Get All Users returns 200', function() { pm.response.to.have.status(200); });",
                  "var jsonData = pm.response.json();",
                  "pm.test('Response is array', function() { pm.expect(jsonData).to.be.an('array'); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Each User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/utilisateurs/{{user_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "utilisateurs",
                "{{user_id}}"
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var ids = JSON.parse(pm.environment.get('user_ids'));",
                  "if (ids.length > 0) {",
                  "    pm.variables.set('user_id', ids.shift());",
                  "    pm.environment.set('user_ids', JSON.stringify(ids));",
                  "} else {",
                  "    postman.setNextRequest(null);",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Get User by ID returns 200', function() { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Delete All Users",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/utilisateurs/{{user_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "utilisateurs",
                "{{user_id}}"
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var ids = JSON.parse(pm.environment.get('user_ids'));",
                  "if (ids.length > 0) {",
                  "    pm.variables.set('user_id', ids.shift());",
                  "    pm.environment.set('user_ids', JSON.stringify(ids));",
                  "} else {",
                  "    postman.setNextRequest(null);",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Delete User returns 200', function() { pm.response.to.have.status(200); });"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
